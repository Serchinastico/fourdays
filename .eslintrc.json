{
	"env": {
		"es6": true,
		"amd": true
	},
	"extends": ["airbnb", "prettier", "prettier/react", "plugin:prettier/recommended", "plugin:react/recommended", "eslint:recommended", "eslint-config-prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"require": true,
		"__DEV__": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"import/no-unresolved": "off",
		"react/prop-types": "off",
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"react/prefer-stateless-function": [0],
		"prettier/prettier": ["error"]
	}
}
