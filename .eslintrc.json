{
	"env": {
		"es6": true
	},
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react",
		"plugin:prettier/recommended",
		"plugin:react/recommended",
		"eslint:recommended",
		"eslint-config-prettier"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"require": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"prettier"
	],
	"rules": {
		"import/no-unresolved": "off",
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"singleQuote": true,
				"printWidth": 100
			}
		]
	}
}
