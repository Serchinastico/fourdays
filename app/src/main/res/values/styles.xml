<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="MidRegularPrimary">
        <item name="android:textSize">@dimen/midFontSize</item>
        <item name="android:textColor">@color/dark_mint</item>
        <item name="fontPath">fonts/AvenirNext-Regular.ttf</item>
    </style>

    <style name="MidRegularDisabled">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/midFontSize</item>
        <item name="android:textColor">@color/dark_mint_50</item>
        <item name="fontPath">fonts/AvenirNext-Regular.ttf</item>
    </style>

    <style name="LargeMediumNeutral">
        <item name="android:textSize">@dimen/largeFontSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/AvenirNext-Medium.ttf</item>
    </style>

    <style name="LargeRegularNeutral">
        <item name="android:textSize">@dimen/largeFontSize</item>
        <item name="android:textColor">@color/brown_grey</item>
        <item name="fontPath">fonts/AvenirNext-Regular.ttf</item>
    </style>

</resources>
