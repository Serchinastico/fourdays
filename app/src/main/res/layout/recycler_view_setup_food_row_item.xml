<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.fourdays.app.common.ui.view.FoodItemView
            android:id="@+id/foodItem1View"
            android:layout_width="104dp"
            android:layout_height="136dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/foodItem2View"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.fourdays.app.common.ui.view.FoodItemView
            android:id="@+id/foodItem2View"
            android:layout_width="104dp"
            android:layout_height="136dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/foodItem3View"
            app:layout_constraintStart_toEndOf="@id/foodItem1View"
            app:layout_constraintTop_toTopOf="parent" />

    <com.fourdays.app.common.ui.view.FoodItemView
            android:id="@+id/foodItem3View"
            android:layout_width="104dp"
            android:layout_height="136dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/foodItem2View"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
