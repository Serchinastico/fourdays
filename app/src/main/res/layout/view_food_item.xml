<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="136dp"
        android:layout_height="152dp">

    <View
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginStart="@dimen/margin2x"
            android:layout_marginTop="@dimen/margin2x"
            android:layout_marginEnd="@dimen/margin2x"
            android:background="@drawable/background_food_item_image"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/foodItemImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/backgroundView"
            app:layout_constraintEnd_toEndOf="@id/backgroundView"
            app:layout_constraintStart_toStartOf="@id/backgroundView"
            app:layout_constraintTop_toTopOf="@id/backgroundView"
            tools:ignore="ContentDescription"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
            android:id="@+id/foodItemNameTextView"
            style="@style/MidRegularPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/margin1x"
            android:paddingEnd="@dimen/margin1x"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backgroundView"
            tools:text="Cebollas" />

    <View
            android:id="@+id/disabledBackgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_50" />

</androidx.constraintlayout.widget.ConstraintLayout>
