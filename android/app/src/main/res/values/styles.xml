<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="DefaultExplainingPermissionsTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#2E2E2E</item>

        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#2E2E2E</item>

        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
